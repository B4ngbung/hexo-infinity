<% if (post.link){ %>
    <h2 itemprop="name">
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>"
        target="_blank" itemprop="url"><%= post.title || '(no title)' %></a>
    </h2>
    <% } else { %>
    <% if (index){ %>
        <a  href="<%- url_for(post.path) %>">
            <h2 class="<%= class_name %>" itemprop="name">
            <%= post.title || '(no title)' %>
            </h2>
        </a>
    <% } else { %>
        <h1 class="<%= class_name %>" itemprop="name">
        <%= post.title || '(no title)' %>
        </h1>
    <% } %>
<% } %>
